{
  "root": true,
  "extends": ["eslint:recommended", "standard"],
	"env": {
		"es6": true
	},
	"globals": {
		"Deno": false
	},
  "rules": {
    "indent": ["warn", "tab"],
		"no-fallthrough": [
			"warn", {
				"allowEmptyCase": true
			}
		],
    "no-tabs": "off",
    "no-unused-vars": [
			"warn", {
				"vars": "local",
				"varsIgnorePattern": "^_",
				"args": "after-used"
			}
		],
		"prefer-const": "warn",
		"space-before-function-paren": ["warn", "never"],
		"yoda": [
			"warn",
			"never", {
				"onlyEquality": true
			}
		]
  }
}
